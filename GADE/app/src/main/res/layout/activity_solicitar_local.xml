<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/borrarEsteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disponible"/>
    <EditText
        android:id="@+id/editDisponible"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:enabled="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numReserva" />
    <EditText
        android:id="@+id/editIdReserva"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:enabled="true"
        android:maxLength="7" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/idActividad" />
    <EditText
        android:id="@+id/editIdActividad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:enabled="true"
        android:maxLength="7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomActividad"/>
    <EditText
        android:id="@+id/editNomActividad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:maxLength="20"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipoActividad"/>
    <EditText
        android:id="@+id/editTipoActividad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carnetEst" />

    <EditText
        android:id="@+id/editCarnet"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:inputType="text"
        android:maxLength="7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NombreEstudiante" />

    <EditText
        android:id="@+id/editNomEst"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:inputType="text"
        android:maxLength="20" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idEsc" />

    <EditText

        android:id="@+id/editIdEscuela"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:inputType="number"
        android:maxLength="7" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idDoc"/>

    <EditText
        android:id="@+id/editIdDoc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nomDoc"/>

    <EditText
        android:id="@+id/editNomDoc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:inputType="text"
        android:maxLength="20"/>

    <Button
        android:id="@+id/btnInsertarReserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="insertarReserva"
        android:text="@string/insertar" />
</LinearLayout>
</ScrollView>

