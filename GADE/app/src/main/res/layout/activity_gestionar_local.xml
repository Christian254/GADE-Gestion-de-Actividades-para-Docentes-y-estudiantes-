<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sv.edu.ues.fia.gade.UsuarioNormal.GestionarLocalActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/title1"
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_admin"
                    android:layout_centerHorizontal="true"
                    android:textSize="25dp"
                    />
                <TextView
                    android:id="@+id/nextToTitle1"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="20sp"
                    android:layout_below="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/local"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_below="@+id/title1"
                    android:layout_toRightOf="@+id/nextToTitle1"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/idlocal1"
                        android:hint="id"
                        android:inputType="number"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/nombreAdmin"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="25sp"
                    android:layout_below="@+id/nextToTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/nombreLocal"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="15sp"
                    android:textColor="@color/blanco"
                    android:layout_below="@+id/nextToTitle1"
                    android:layout_toRightOf="@+id/nombreAdmin"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/nomLocal"
                        android:hint="@string/nombreLocal"
                        android:inputType="text"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/escuelaid"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="20sp"
                    android:layout_below="@+id/nombreAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/nombreAdministrador"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:id="@+id/spin"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="15sp"
                    android:layout_below="@+id/nombreAdmin"
                    android:layout_toRightOf="@+id/escuelaid"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/idAdmin2"
                        android:hint="@string/idAdmin"
                        android:inputType="number"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/nombreAdmin"
                    android:id="@+id/spinner"
                    android:layout_alignParentRight="true"
                    android:overlapAnchor="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Spinner>


                <TextView
                    android:id="@+id/spinner1"
                    android:layout_marginLeft="25sp"
                    android:layout_marginTop="20sp"
                    android:layout_below="@+id/spin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/idCupo"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="15sp"
                    android:layout_below="@+id/spin"
                    android:layout_toRightOf="@+id/spinner1"
                    >
                    <android.support.design.widget.TextInputEditText
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/idCupo"
                        android:hint="@string/idCupo"
                        android:inputType="number"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_marginLeft="30sp"
                    android:layout_width="95dp"
                    android:layout_height="35sp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/btn1"
                    android:layout_marginTop="30sp"
                    android:layout_below="@+id/spinner1"
                    android:id="@+id/btnBuscar1"
                    android:text="buscar"
                    android:textColor="@color/blanco"
                    android:onClick="buscar"
                    />

                <Button
                    android:layout_alignParentRight="true"
                    android:layout_width="95dp"
                    android:layout_marginRight="30sp"
                    android:layout_height="35sp"
                    android:background="@drawable/btn1"
                    android:layout_marginTop="30sp"
                    android:layout_below="@+id/spinner1"
                    android:text="Guardar"
                    android:textColor="@color/blanco"
                    android:onClick="guardar"
                    />

                <Button
                    android:layout_marginLeft="30sp"
                    android:layout_width="95dp"
                    android:layout_height="35sp"
                    android:background="@drawable/btn1"
                    android:layout_marginTop="30sp"
                    android:layout_below="@+id/btnBuscar1"
                    android:text="Actualizar"
                    android:textColor="@color/blanco"
                    android:onClick="actualizar"
                    />

                <Button
                    android:layout_alignParentRight="true"
                    android:layout_width="95dp"
                    android:layout_height="35sp"
                    android:background="@drawable/btn1"
                    android:layout_marginTop="30sp"
                    android:textColor="@color/blanco"
                    android:layout_below="@+id/btnBuscar1"
                    android:id="@+id/btnEliminar1"
                    android:layout_marginRight="30sp"
                    android:text="Borrar"
                    android:onClick="borrar"
                    />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/btnEliminar1"
                    android:layout_marginTop="50sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/desarrollador1"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
